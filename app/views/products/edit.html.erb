<div class="container">
  <h1>Edit Product</h1>

    <%= form_for @product, url: "/products/#{@id}" do |f| %>
      <div class="form-group">
        <%= f.label :name %>:
        <%= f.text_field :name, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :price %>:
        <%= f.text_field :price, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :description %>:
        <%= f.text_field :description, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :image %>:
        <%= f.text_field :image, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :quantity %>:
        <%= f.text_field :quantity, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :category %>:
        <%= f.text_field :category, class: "form-control" %><br />
      </div>

      <div class="show">
        <%= f.submit %>
      </div>
    <% end %>

    <div class="show">
      <%= form_tag "/products/#{@id}", method: :delete do %>
        <%= submit_tag "Delete Product" %>
      <% end %>
    </div>

  <a href="/products/<%= @product.id %>">
  <button class="show">
  Return to This Product (Don't Update)
  </button>
  </a>
</div>
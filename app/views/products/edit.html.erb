<div class="container">
  <h1>Edit Product</h1>

  <%= form_tag "/products/#{@id}", method: :patch do %>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, @product.name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :price %>
      <%= text_field_tag :price, @product.price, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :description %>
      <%= text_field_tag :description, @product.description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :image, "Image URL" %>
      <%= text_field_tag :image, @product.image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :quantity %>
      <%= text_field_tag :quantity, @product.quantity, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :category %>
      <%= text_field_tag :category, @product.category, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :available %>
      <%= text_field_tag :available, @product.available, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Update Product" %>
    </div>
  <% end %>

  <%= form_tag "/products/#{@id}", method: :delete do %>
    <%= submit_tag "Delete Product" %>
  <% end %>

  <a href="/products/<%= @product.id %>">
  <button class="show">
  Return This Product (Don't Update)
  </button>
  </a>
</div>
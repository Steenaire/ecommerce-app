<table>
  <tr>
    <th>Image</th>
    <th>Product Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Category</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= image_tag(product.image) %></td>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.quantity %></td>
      <td><%= product.category %></td>
    </tr>
  <% end %>
</table>
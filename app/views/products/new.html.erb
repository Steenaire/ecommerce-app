<%= nested_form_for @product do |f| %>
      <div class="form-group">
        <%= f.label :name %>:
        <%= f.text_field :name, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :price %>:
        <%= f.text_field :price, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :description %>:
        <%= f.text_field :description, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :quantity %>:
        <%= f.text_field :quantity, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :category %>:
        <%= f.text_field :category, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :available %>:
        <%= f.text_field :available, class: "form-control" %><br />
      </div>

      <div class="form-group">
         <%= f.label :supplier %>:
        <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
      </div>

      <div class="form-group">
        <%= f.fields_for :images do |image| %>
          <%= image.label :url %>
          <%= image.text_field :url, class: "form-control" %><br />
        <% end %>
      </div>

      <%= f.submit %>
<% end %>
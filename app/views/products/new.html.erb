<div class="container">
  <h1>New Product</h1>
  <%= form_tag '/products', method: :post do %>
    <div>
      <%= label_tag :name %>
      <%= text_field_tag :name %>
    </div>
    <div>
      <%= label_tag :price %>
      <%= text_field_tag :price %>
    </div>
    <div>
      <%= label_tag :description %>
      <%= text_field_tag :description %>
    </div>
    <div>
      <%= label_tag :image, "Image URL" %>
      <%= text_field_tag :image %>
    </div>
    <div>
      <%= label_tag :quantity %>
      <%= text_field_tag :quantity %>
    </div>
    <div>
      <%= label_tag :category %>
      <%= text_field_tag :category %>
    </div>
    <div>
      <%= label_tag :status %>
      <%= text_field_tag :status %>
    </div>
    <div class>
      <%= submit_tag "Create Product" %>
    </div>
  <% end %>
</div>
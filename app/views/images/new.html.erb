<%= form_for @image do |f| %>
      <div class="form-group">
        <%= f.label :url %>:
        <%= f.text_field :url, class: "form-control" %><br />
      </div>

      <div class="form-group">
        <%= f.label :product_id %>:
        <%= f.text_field :product_id, value: @product_id, class: "form-control" %><br />
      </div>

      <div class="show">
        <%= f.submit %>
      </div>
<% end %>

<a href="/products/<%= @product_id %>">Back to Product</a>
<h1><%= current_user.name %>'s Order History</h1>
<table class = "table table-hover">
  <% if current_user %>
    <th>Items Ordered</th>
    <th>Order Total</th>
    <th>Order Placed</th>
    <th>Confirmation Email</th>
    <% @orders.each do |order| %>
      <tr>
      <td>
        <% order.products.each do |product| %>
          <% if product == order.products.last %>
            <%= product.name %>
          <% else %>
            <%= product.name %>,
          <% end %>
        <% end %>
      </td>
      <td><%= number_to_currency(order.total) %></td>
      <td><%= order.updated_friendly_time %></td>
      <td><%= order.user.email %> </td>
      </tr>
    <% end %>
  <% else %>
    <a href="/login">Log In to See Your Contacts!</a>
  <% end %>
</table>
